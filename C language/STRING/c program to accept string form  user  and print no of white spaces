// c program to accept string form  user  and print no of white spaces
#include<stdio.h>
int main()
{
int i=0,cnt=0;
char str[100];
printf("please enter a string with multiple spaces\n");
fgets(str, 100, stdin);
while(str[i]!='\0')
{
while(str[i]==' ')
{
cnt++;
i++;
}
while(str[i]!=' ' && str[i]!='\0')
{
i++;
}
}
printf("number of white spaces in a string  are:%d",cnt);
return 0;
}

