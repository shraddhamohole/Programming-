// write a c progarm which toggle case of the string
#include<stdio.h>
int main()
{
    char str[100];
    int i=0;
    printf("please enter a string\n");
    printf("%s",str);
    fgets(str,sizeof(str),stdin);
    while(str[i]!='\0')
    {
        if(str[i]>='A'&&str[i]<='Z')
          {
            str[i]=str[i]+32 ;
           }
        else if(str[i]>='a'&&str[i]<='z')
        {
            str[i]=str[i]-32;
            }
         printf("%c",str[i]);
    i++;   }
return 0;
}
